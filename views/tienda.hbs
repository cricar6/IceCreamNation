<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ice Cream Nation | Tienda</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,800,900,900i" rel="stylesheet">

    <link rel="shortcut icon" href="/imgs/favicon.png" type="image/png" sizes="16x16">

    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/svgLogo.css">
    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/shopfilter.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


</head>

<body>
    <header>
        <div class="hamburguer">
            <img src="/imgs/icons/open.png" id="openH" width="30px" height="30px" alt="Open">
            <img src="/imgs/icons/close.png" id="closeH" width="30px" height="30px" alt="close">

        </div>
        <div class="nav" id="navegador">
            <ul>
                <img src="/imgs/favicon.png" width="80px" alt="">
                <li>
                    <a href="/">Inicio</a>
                </li>
                <li>
                    <a href="/#chartstics">Características</a>
                </li>
                <li>
                    <a href="/tu_helado">¿Qué helado eres?</a>
                </li>
                <li>
                    <a href="/tienda">Tienda</a>
                </li>
                <li>
                    <a href="/#subsnewsltr">Suscríbete</a>
                </li>
            </ul>
        </div>
    </header>


    <div class="contentApp">

        <div class="filters">
            <div class="optionFlavor optionContainer">
                <p class="filterDescription">
                    Quiero mi helado de:
                </p>
                <p class="flavorSelected optionSelected">Todos</p>
                <div class="flavorOptContainer optionsContainer">
                    <ul class="optionsFl options">
                        <li style="background-color: #d2691e">
                            <a href="#">Chocolate</a>
                        </li>
                        <li style="background-color: #fc5a8e">
                            <a href="#">Fresa</a>
                        </li>
                        <li style="background-color: #f3e5ab">
                            <a href="#">Vainilla</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="optionPrice optionContainer">
                <p class="filterDescription">
                    A este precio:
                </p>
                <div class="priceFIlterContainer">

                    <div class="priceFilters">
                        <p class="priceMinSelected optionSelected">-</p>
                        <div class="priceMinOptContainer optionsContainer">
                            <ul class="optionsPMin options">
                                <li style="background-color: #22222C">
                                    <a href="#">6 000</a>
                                </li>
                                <li style="background-color: #22222C">
                                    <a href="#">7 000</a>
                                </li>
                                <li style="background-color: #22222C">
                                    <a href="#">8 000</a>
                                </li>
                                <li style="background-color: #22222C">
                                    <a href="#">9 000</a>
                                </li>
                                <li style="background-color: #22222C">
                                    <a href="#">10 000</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <p class="intermediate">
                        A
                    </p>

                    <div class="priceFilters">
                        <p class="priceMaxSelected optionSelected">-</p>
                        <div class="priceMaxOptContainer optionsContainer">
                            <ul class="optionsPMax options">
                                <li style="background-color: #22222C">
                                    <a href="#">6 000</a>
                                </li>
                                <li style="background-color: #22222C">
                                    <a href="#">7 000</a>
                                </li>
                                <li style="background-color: #22222C">
                                    <a href="#">8 000</a>
                                </li>
                                <li style="background-color: #22222C">
                                    <a href="#">9 000</a>
                                </li>
                                <li style="background-color: #22222C">
                                    <a href="#">10 000</a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="products">
            <div class="iceCreamProductsContainer">
                <div class="iceCreamPrev">

                </div>
                <div class="iceCeamActual">

                </div>
                <div class="iceCreamNext">

                </div>
            </div>
        </div>
    </div>

    <div class="productsNotShown">
        {{#each iceCream}}
            <div class="creamProduct" flavor="{{flavor}}" price="{{price}}">

            </div>
        {{/each}}
    </div>

    <script src="/js/anime.min.js"></script>
    <script src="/js/shopfilter.js"></script>
    <script src="/js/main.js"></script>

</body>

</html>